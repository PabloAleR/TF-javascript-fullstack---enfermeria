<div class="row-md-7 mx-auto mt-4">
    <div class="col-md-7 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Registro de Usuario</h3>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Nombre:</label>
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre"
                            value="{{nombre}}" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Apellido:</label>
                        <input type="text" class="form-control" name="apellido" placeholder="Apellido"
                            value="{{apellido}}" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">DNI:</label>
                        <input type="number" class="form-control" name="dni" placeholder="DNI"
                            value="{{dni}}" min="5000000" max="80000000" step="1" required>
                    </div>
                    <div class="form-group  d-flex align-items-center">
                        <label class="mb-0 mr-2">Fecha de Nacimiento:</label>
                        <input type="date" name="fechaNacimiento" class="form-control"
                            placeholder="Fecha de Nacimiento" value="{{fechaNacimiento}}">
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Sexo:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="sexo" id="masculino" value="Masculino"
                                {{#ifCond sexo '===' 'Masculino' }}checked{{/ifCond}} required>
                            <label class="form-check-label" for="masculino">
                                Masculino
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="sexo" id="femenino" value="Femenino"
                                {{#ifCond sexo '===' 'Femenino' }}checked{{/ifCond}} required>
                            <label class="form-check-label" for="femenino">
                                Femenino
                            </label>
                        </div>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Domicilio:</label>
                        <input type="text" class="form-control" name="domicilio" placeholder="Domicilio"
                            value="{{domicilio}}" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Telefono Fijo:</label>
                        <input type="number" class="form-control" name="numeroTelefonoFijo"
                            placeholder="Telefono Fijo" value="{{numeroTelefonoFijo}}" min="4000000" max="49999999" step="1">
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Celular:</label>
                        <input type="number" class="form-control" name="numeroCelular" placeholder="Celular"
                            value="{{numeroCelular}}" min="3000000000" max="3999999999" step="1" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Profesión:</label>
                        <input type="text" class="form-control" name="profesion" placeholder="Profesión"
                            value="{{profesion}}" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Matrícula Profesional:</label>
                        <input type="text" class="form-control" name="matriculaProfesional"
                            placeholder="Matrícula Profesional" value="{{matriculaProfesional}}">
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Nombre de Usuario:</label>
                        <input type="text" class="form-control" name="nombreUsuario" placeholder="Nombre de Usuario"
                            value="{{nombreUsuario}}" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Email:</label>
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Password:</label>
                        <input type="password" class="form-control" name="password" placeholder="Password"
                            value="{{password}}" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Confirmar Password:</label>
                        <input type="password" class="form-control" name="confirmacionPassword" placeholder="Password"
                            value="{{confirmacionPassword}}" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Rol de Usuario:</label>
                        <select name="rolUsuario" class="form-control w-auto" required>
                            {{#if rolUsuario}}
                            <option value="Administrador" {{#ifCond rolUsuario '===' 'Administrador'
                                }}selected{{/ifCond}}>Administrador</option>
                            <option value="Cargador" {{#ifCond rolUsuario '===' 'Cargador'
                                }}selected{{/ifCond}}>Cargador</option>
                            {{else}}
                            <option value="" selected disabled hidden>Seleccione un Rol de Usuario</option>
                            <option value="Administrador">Administrador</option>
                            <option value="Cargador">Cargador</option>
                            {{/if}}
                        </select>
                    </div>
                    <!-- Botón Registrar -->
                    <div class="form-group d-flex align-items-center">
                        <button type="submit" class="btn btn-primary btn-block">
                            Registrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>